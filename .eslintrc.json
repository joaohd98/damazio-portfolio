{
  "parserOptions": {
    "project": ["./tsconfig.json", "./tsconfig.spec.json"]
  },
  "extends":  [
    "next/core-web-vitals",
    "prettier",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
